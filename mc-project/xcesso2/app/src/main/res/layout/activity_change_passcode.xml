<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Your current Xcesso PassCode "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="100dp"

        android:id="@+id/rl_passcode"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <TextView
               android:id="@+id/tv_passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/Passcode_display_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_passcode"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dip"
            android:padding="10dip"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_new_passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New PassCode"
                android:inputType="number"
                android:maxLength="4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="This Passcode will be used in commands while accessing your phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dip"
                />

            <Button
                android:id="@+id/btn_change_passcode"
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Passcode"
                android:layout_gravity="bottom"
                android:background="@color/colorAccent"
                android:textColor="@color/White"
                android:textStyle="bold"

                />

        </LinearLayout>


</RelativeLayout>